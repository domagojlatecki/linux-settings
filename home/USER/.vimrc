set nocompatible
filetype indent plugin on
syntax on
set wildmenu
set showcmd
set hlsearch
set confirm
set encoding=utf-8
set fileencoding=utf-8
set number
set list
set listchars=eol:↵,tab:▷‒,space:⸱
set tabstop=4
set shiftwidth=4
set expandtab
set smarttab
highlight EndOfBuffer ctermfg=black ctermbg=black
